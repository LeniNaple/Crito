@using Umbraco.Cms.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage



        
        <div class="menu-showcase container">
            <div class="left-showcase">
                <h1>@Model.Value("showcaseTitle")</h1>
                <h2>@Model.Value("showcaseDescription")</h2>
                <div class="showcase-buttons">
                    <a href="@Model.Value("showcaseButtonUrl")" class="yellow-btn"><p>@Model.Value("showcaseButtonText")</p><i class="fa-solid fa-arrow-up-right"></i></a>
                    <button class="beige-btn"><p>Learn More</p><i class="fa-solid fa-arrow-up-right"></i></button>
                </div>
            </div>
            <div class="right-showcase">

                @{
                    var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
                    if (showcaseImage != null) {
                    
                    <img src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")" />
                    
                    }

                }



            </div>
        </div>
        
        <div class="bottom-showcase">
            <img src="~/images/background-lines.svg" alt="white lines">
        </div>